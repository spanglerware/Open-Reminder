<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="layout">
        <item name="android:background">#eeeeee</item>
    </style>


    <style name="layout_centered">
        <item name="android:background">#eeeeee</item>
    </style>


    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">monospace</item>
        <!--        <item name="android:shadowColor">#FF000000</item>
                <item name="android:shadowDx">0</item>
                <item name="android:shadowDy">-1</item>
                <item name="android:shadowRadius">0.2</item>
                        <item name="android:textSize">6sp</item>
                        <item name="android:textStyle">bold</item> -->
        <item name="android:background">@drawable/button_enabled</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

    </style>


    <style name="button_green" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#009400</item>
        <item name="android:background">@drawable/button_start</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_red" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#f00</item>
        <item name="android:background">@drawable/button_stop</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
